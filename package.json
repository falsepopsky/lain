{
  "name": "lain",
  "description": "Monorepo for web scraping anime sites",
  "private": true,
  "type": "module",
  "author": "falsepopsky",
  "license": "GPL-3.0",
  "scripts": {
    "format": "prettier --cache -w .",
    "lint": "eslint . --cache --cache-location \"./node_modules/.cache/eslint/\"",
    "clean": "rm -rf node_modules .turbo",
    "clean:build": "turbo clean:build",
    "clean:workspace": "turbo clean:workspace",
    "build": "turbo build",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "preinstall": "npx only-allow pnpm"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "devDependencies": {
    "@swc/core": "^1.3.60",
    "@swc/jest": "^0.2.26",
    "@types/jest": "^29.5.1",
    "@types/node": "^20.2.4",
    "eslint": "^8.41.0",
    "eslint-config-lain": "workspace:^1.0.0",
    "jest": "^29.5.0",
    "prettier": "^2.8.8",
    "turbo": "^1.9.9",
    "typescript": "^5.0.4"
  },
  "engines": {
    "node": ">=18",
    "pnpm": ">=8"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/falsepopsky/lain.git"
  },
  "bugs": {
    "url": "https://github.com/falsepopsky/lain/issues"
  }
}
