{
  "name": "lain",
  "private": true,
  "type": "module",
  "license": "Apache-2.0",
  "workspaces": {
    "packages": [
      "packages/eslint-config-lain",
      "packages/animeflv",
      "packages/jkanime"
    ]
  },
  "scripts": {
    "format": "prettier --cache -w .",
    "lint": "eslint . --cache --cache-location \"./node_modules/.cache/eslint/\"",
    "clean": "rm -rf node_modules .turbo",
    "clean:build": "turbo clean:build",
    "clean:workspace": "turbo clean:workspace",
    "build": "turbo build --filter=!eslint-config-lain",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "preinstall": "npx only-allow pnpm",
    "publish-packages": "pnpm run build && changeset publish",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs"
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.2",
    "@swc/core": "^1.3.71",
    "@swc/jest": "^0.2.27",
    "@types/jest": "^29.5.3",
    "@types/node": "^20.4.5",
    "eslint": "^8.46.0",
    "eslint-config-lain": "workspace:^",
    "jest": "^29.6.2",
    "prettier": "^3.0.0",
    "turbo": "^1.10.12",
    "typescript": "^5.1.6",
    "vitepress": "1.0.0-beta.6"
  },
  "engines": {
    "node": ">=18",
    "pnpm": ">=8"
  }
}
